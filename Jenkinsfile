pipeline {
  
  agent any
  
  stages {
    
    stage("Build"){
      
      steps {
        echo 'Modify building the application...'
      }
    }
      
    stage ("test"){
      
      steps{
        echo 'testing the application...'
      }
    }
      
    stage ("deploy"){
      steps{
        echo 'deploying the application'
      }
    }
  }
  

}
